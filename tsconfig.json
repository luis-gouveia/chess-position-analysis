{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "allowJs": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "rootDir": "./"
  },
  "include": ["src/**/*"],
  "exclude": ["src/resources/**/*"]
}
